{
  "name": "20201227-chrome-extension",
  "author": "kaznak <kaznak.at.work@gmail.com>",
  "version": "0.0.0",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-react-jsx": "^7.12.12",
    "@babel/preset-env": "^7.12.11",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "autoprefixer": "^10.1.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "rollup": "^1.16.2",
    "rollup-plugin-size": "^0.2.2",
    "rollup-plugin-terser": "^5.0.0",
    "serve": "^11.0.2",
    "tailwindcss": "^2.0.2"
  },
  "dependencies": {
    "date-fns": "^1.30.1",
    "preact": "^10.5.7"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ]
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "clean": "rm -rf public/js public/css",
    "build:css": "postcss style/base.css -o public/css/style.css",
    "build:js": "rollup -c",
    "build": "yarn build:css && yarn build:js",
    "watch:css": "postcss style/base.css -o public/css/style.css -w",
    "watch:js": "rollup -c -w",
    "watch": "npm-run-all --parallel watch:css watch:js",
    "dev": "npm-run-all --parallel start watch",
    "start": "serve public"
  }
}
